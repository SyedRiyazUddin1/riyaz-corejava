<?xml version="1.0" encoding="UTF-8" ?>


<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!--        Annotation based configuration-->
    <context:component-scan base-package="com.spring.examples"></context:component-scan>

    <!--       Setter injection using property tag below-->
    <bean id="speaker" class="com.spring.core.examples.dependency_InjectionDemo.Speaker">
        <!--                        <property name="brand" value="Sony"></property>-->

        <!--        Constructor injection-->
        <constructor-arg value="Sony"></constructor-arg>
    </bean>


    <!--        <bean id="airtel" class="com.spring.examples.Samsungg"></bean>-->
    <!--        <bean id="simCard" class="com.spring.examples.Iphoneone"></bean>-->


</beans>